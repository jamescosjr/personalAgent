{
  "name": "personal-scheduling-assistant",
  "version": "1.0.0",
  "description": "Assistente Pessoal de Agendamento via Telegram com Integração Google (DDD Architecture)",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --coverage --roots=tests/unit",
    "test:integration": "jest --coverage --roots=tests/integration",
    "test:e2e": "jest --coverage --roots=tests/e2e",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t personal-assistant:latest .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f app",
    "prepare": "husky"
  },
  "keywords": [
    "telegram",
    "bot",
    "google-calendar",
    "ai",
    "ddd",
    "typescript",
    "scheduling"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "express": "^5.0.1",
    "helmet": "^8.0.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.4.1",
    "telegraf": "^4.16.3",
    "mongoose": "^8.8.4",
    "tsyringe": "^4.8.0",
    "reflect-metadata": "^0.2.2",
    "zod": "^3.23.8",
    "luxon": "^3.5.0",
    "chrono-node": "^2.7.7",
    "pino": "^9.5.0",
    "googleapis": "^144.0.0",
    "google-auth-library": "^9.15.0",
    "@google/generative-ai": "^0.21.0",
    "uuid": "^11.0.3",
    "dotenv": "^16.4.7",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.54.2",
    "@opentelemetry/auto-instrumentations-node": "^0.50.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.54.2",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.54.2",
    "@opentelemetry/instrumentation-http": "^0.54.2",
    "@opentelemetry/instrumentation-express": "^0.43.0",
    "@opentelemetry/instrumentation-mongodb": "^0.48.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.9",
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/luxon": "^3.4.2",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.7.2",
    "tsx": "^4.19.2",
    "tsc-alias": "^1.8.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "@types/jest": "^29.5.12",
    "supertest": "^7.0.0",
    "@types/supertest": "^6.0.2",
    "nock": "^13.5.6",
    "testcontainers": "^10.15.0",
    "eslint": "^9.16.0",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "prettier": "^3.4.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "pino-pretty": "^13.0.0",
    "cross-env": "^7.0.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}