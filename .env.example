# Application
NODE_ENV=development
PORT=3000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/personal-assistant

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_DOMAIN=

# Google OAuth2 (para Calendar API)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback
GOOGLE_REFRESH_TOKEN=your_refresh_token_here

# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key_here

# Encryption (gerar com: openssl rand -hex 32)
ENCRYPTION_KEY=your_256_bit_encryption_key_hex

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=personal-assistant
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp

# Logging
LOG_LEVEL=debug
LOG_PRETTY=true